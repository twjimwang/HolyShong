@model RestaurantViewModel1

<div id="app">
    <!-- top -->
    <div class="topTitle container-fluid">
        <div class="discount row">
            <div class="col-12">
                <a href="#">使用優響方案可享$0外送費</a>
            </div>
        </div>
    </div>
    <!-- banner -->
    <div class="banner">
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
            <div class="carouselInner">
                <div class="carouselItem active">
                    <img class="d-block" src="@Model.StoreImg" alt="First slide">
                </div>
            </div>
        </div>
        <div class="bannerTxtBtn container">
            <div class="text">
                <h1>@Model.StoreName</h1>
                <img src="https://dkl8of78aprwd.cloudfront.net/ticket@3x.png" alt="">
                •
                <span class="starScore">score</span>
                <span class="comment">(21)</span>
            </div>
            <div class="timeHeartBtn">
                <button type="button" class="btn btn-light btn-oblong" data-toggle="modal" data-target="#exampleModal">
                    <i class="fas fa-calendar-day"></i>
                    安排時間
                </button>
                <!-- heart -->
                <span class="fa-stack fa-1x heart">
                    <i class="far fa-heart fa-stack-1x heartEmpty"></i>
                    <i class="fas fa-heart fa-stack-1x heartSolid"></i>
                </span>
                <!-- timeModal -->
                <div class="timeModal modal fade" id="exampleModal" tabindex="-1" role="dialog"
                     aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="timeModalContent modal-content">
                            <div class="btn-time btnTimeClose">
                                <button class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="timeModalHeader modal-header">
                                <h3 class="openTime modal-title" id="exampleModalLabel">
                                    在
                                    <span class="setOpenTime">open</span>
                                    AM開始營業
                                    <br>
                                    <span>這家餐廳目前沒有營業，但您可提前預約訂單。</span>
                                </h3>
                            </div>
                            <!-- 下拉選單modal -->
                            <div class="modal-body">
                                <select class="formSelect" aria-label="select example">
                                    <option selected>今天，8月26日 週四</option>
                                    <option value="1">明天，8月27日 週五</option>
                                    <option value="2">8月30日 週一</option>
                                    <option value="3">8月31日 週二 </option>
                                </select>
                                <select class="formSelect" aria-label="select example">
                                    <option selected>上午07:00 - 上午07:30</option>
                                    <option value="1">上午07:15 - 上午07:45</option>
                                    <option value="2">上午07:30 - 上午08:00</option>
                                    <option value="3">上午07:45 - 上午08:15</option>
                                </select>
                            </div>
                            <div class="selectTime modal-footer">
                                <button type="button" class="btn btn-lg btn-dark btn-time">安排時間</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--地址-->
    <div class="wrap container">
        <div class="address">
            <p>$ • @Model.StoreCategoryName</p>
            <p>
                @Model.StoreAddress •
                <a data-toggle="modal" data-target="#more"
                   href="#">顯示更多</a>
            </p>
        </div>
    </div>
    <!-- dataModal -->
    <div class="modal fade" id="more" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="dataModalContent modal-content">
                <div class="dataModalHeader">
                    <div class="imgClose">
                        <div type="button" data-dismiss="modal">
                            <span aria-hidden="true">
                                <i class="far fa-times-circle fa-3x"></i>
                            </span>
                        </div>
                        <div class="imgClosePic">
                            <img src="@Model.StoreImg">
                        </div>
                    </div>
                </div>
                <div class="dataModalBody">
                    <div class="store-txt">
                        <h2 class="p-3">@Model.StoreName</h2>
                        <span class="p-3">@Model.StoreCategoryName • $</span>
                    </div>
                    <div class="line"></div>
                    <div class="map">
                        <div class="marker p-3">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div class="textCenter">
                            @Model.StoreAddress
                        </div>
                        <div class="copy p-3">
                            <i class="fas fa-clone"></i>
                        </div>
                    </div>
                    <div class="line"></div>
                    <div class="startTime">
                        <div class="clock p-3">
                            <i class="fas fa-clock"></i>
                        </div>

                        <div class="textCenter">
                            營業時間:
                            @*@foreach (var businessHour in Model.BusinesshourList)
                                {
                                <div class="week">@businessHour.WeekDay<span class="setOpenTime">@businessHour.OpenTime - @businessHour.CloseTime</span></div>
                           }*@

                        </div>

                        <div class="plus p-3">
                            <i class="fas fa-plus"></i>
                        </div>
                    </div>
                    <div class="line"></div>
                    <div class="joinEats">
                        <div class="ticket p-3">
                            <img src="https://dkl8of78aprwd.cloudfront.net/ticket@3x.png" alt="">
                        </div>
                        <div class="textCenter">
                            使用優響方案可享$0外送費
                            <br>
                            <span>Join Eats Pass to save at this store</span>
                        </div>
                        <div class="arrow p-3">
                            <i class="fas fa-chevron-right"></i>
                        </div>
                    </div>
                    <div class="line"></div>
                    <div class="score">
                        <div class="star p-3">
                            <i class="fas fa-star"></i>
                        </div>
                        <div class="textCenter">
                            <span class="starScore">score</span>
                            <span class="comment">(21筆評分)</span>
                        </div>
                        <div class="space p-3"></div>
                    </div>
                    <div class="line"></div>
                    <div class="bill">
                        <p>[本店開立紙本發票]</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- navbar -->
    <div class="container position-relative">
        <div class="navMove row">
            <div class="col-12">
                <div class="navbar">
                    @*@foreach (var ProductCategory in Model.ProductAreaList)
                        {
                        <a href="#title_@ProductCategory.Sort">@</a>


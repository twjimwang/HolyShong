@model IEnumerable<OrderListViewModel>

<div class="container orderGroup">

    <div class="row">
        <div class="col-12 mb-4">
            <h1 class="font-weight-bold passOrder mt-4">訂單</h1>
        </div>
    </div>

    @foreach (var order in Model)
    {
        <div class="row">
            <div class="col-12 historyItem mb-3 pb-3">
                <div class="imgDiv">
                    <img src="@order.RestaurantImg">
                </div>
                <div class="itemGroup">
                    <div class="historyStore d-flex">
                        <h3>@order.RestaurantName</h3>
                        <div class="my-auto pl-3">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                        </div>
                    </div>
                    <div class="itemTitleDiv">
                        <div class="itemTitle ">
                            @order.ProductCount 份餐點，共 <div class="itemTitlePrice mx-1">$ @order.Total</div> • @order.DeliverDate
                        </div>
                    </div>
                    <ul>
                        @foreach (var item in order.ProductLists)
                        {
                            <li class="d-flex">
                                <div class="number border d-flex">
                                    @item.ProductQuantity
                                </div>
                                <div>
                                    <div>
                                        @item.ProductName
                                    </div>
                                    <span>
                                        @item.OrderOptions
                                    </span>
                                </div>
                            </li>
                        }
                    </ul>

                    <div class="d-flex showContent mb-4">
                        <span>顯示更多內容</span>
                        <div class="iconDiv d-flex">
                            <i class="fas fa-chevron-down icon mx-2"></i>
                        </div>
                    </div>
                </div>
                @if (order.OrderStatus == 0)
                {
                    <div class="checkRes bgYellow">
                        @Html.ActionLink("查看訂單", "Index", "Order", new { id = order.OrderId}, new { style="color:#000;"});
                    </div>
                }
                else
                {
                    <div class="checkRes bgBlue">
                        @Html.ActionLink("檢視餐廳", "Restaurant", "Store", new { id = order.RestaurantId }, new { style = "color:#fff;" } );
                    </div>
                }

            </div>
        </div>
    }
</div>


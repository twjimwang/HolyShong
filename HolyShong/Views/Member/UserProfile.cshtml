@model UserProfileViewModel


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.MemberId)
    @Html.HiddenFor(x => x.Email)
    <div class="personalGroup container">
        <div class="personalInfo">
            <h2>會員資料修改</h2>
            <div class="name row">
                <label class="col-4 " for="lastName">會員姓氏</label>
                @Html.EditorFor(x => x.LastName, new { htmlAttributes = new { @class = "col-8 form-control" } })
                @Html.ValidationMessageFor(x => x.LastName, "", new { @class = "text-danger" })
                @*<input class="col-8" type="text" id="lastName" value="@Model.LastName">*@
            </div>
            <div class="name row">
                <label class="col-4" for="firstName">會員名字</label>
                @Html.EditorFor(x => x.FirstName, new { htmlAttributes = new { @class = "col-8 form-control" } })
                @Html.ValidationMessageFor(x => x.FirstName, "", new { @class = "text-danger" })
                @*<input class="col-8" type="text" id="firstName" value="@Model.FirstName">*@
            </div>
            <div class="phone row">
                <label class="col-4" for="tel">聯絡電話</label>
                @Html.EditorFor(x => x.Cellphone, new { htmlAttributes = new { @class = "col-8 form-control" } })
                @Html.ValidationMessageFor(x => x.Cellphone, "", new { @class = "text-danger" })
                @*<input class="col-8" type="text" id="tel" value="@Model.Cellphone">*@
            </div>
            <div class="member row">
                <div class="memberTxt col-4">會員狀態</div>
                @if (Model.IsPrimary)
                {
                    <div class="col-8">送送會員 <br>到期時間：@Model.PrimaryEndTime</div>
                }
                else
                {
                    <div class="col-8">
                        一般會員 <button type="button" class="btn btn-primary btn-sm align-items-center" id="GetPrimary">升級為送送會員</button>
                    </div>
                }
            </div>
            <div class="email row">
                <div class="emailTxt col-4">電子郵件</div>
                <div class="emailInfo col-8">@Model.Email</div>
            </div>

            <button type="submit" class="saveBtn btn btn-primary" data-toggle="modal" data-target="#submitResultModal">儲存變更</button>
            @*<div class="modal fade" id="submitResultModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">修改結果</h5>
                            </div>
                            <div class="modal-body align-items-center">
                                @ViewBag.commitResult
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">確認</button>
                            </div>
                        </div>
                    </div>
                </div>*@

            @Html.ValidationSummary()

        </div>
    </div>
}
@section topCSS
{
    <style>
        * {
            font-size: 18px;
        }

        .container {
            max-width: 1920px;
        }

        .personalGroup {
            display: flex;
        }

        .personalInfo {
            margin: 23px auto;
        }

            .personalInfo h2 {
                font-size: 20px;
            }

            .personalInfo .row .col-4 {
                margin-top: auto;
                margin-bottom: auto;
            }

        .layout {
            height: 60px;
            background: red;
        }
        /* name */
        .name {
            margin-top: 16px;
        }

        .emailInfo, .app h4 {
            font-weight: bold;
        }
        /* phone */
        .phone {
            margin: 16px 0;
        }

        /* email */
        .email {
            margin: 16px 0;
        }

        /* saveBtn */
        .saveBtn {
            margin-bottom: 16px;
        }
    </style>
}

@section endJS{
    @Scripts.Render("~/bundles/jqueryval")
}




<div class="cartList" id="cartApp">
    <div class="list">
        <!-- 沒有購物車 -->
        <div v-if="product.length == 0" class="noneList">
            <i class="fas fa-shopping-cart mb-3"></i>
            <br>
            <span>選購餐廳或商店中的商品，即可開啟新的購物車</span>
        </div>
        <!-- 購物車 -->

        <div class="cart-content" v-for="(p,index) in product">
            <div v-if="index==0" class="modal-header">
                <button type="button">x</button>
                <h5 class="modal-title m-auto">{{p.StoreName}}</h5>
            </div>
            <div class="modal-body">
                <div class="selectList d-flex ml-3">
                    <div class="d-flex">
                        <div class="selectDiv d-flex">
                            <select v-model="p.Quantity" name="p.ProductName" v-on:change="removeItem(p,index)">
                                <option value="0">移除</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                        </div>
                        <div>
                            <button class="orderContentDiv btn" data-toggle="modal"
                                    data-target="#storeModal">
                                <span class="mt-1">{{p.ProductName}}</span><br>
                                <span v-for="storeProductOption in p.StoreProductOptions">
                                    {{storeProductOption.ProductOptionName}} <br>
                                    <span v-for="detail in storeProductOption.ProductOptionDetails" v-show="storeProductOption.SelectOption == detail.StoreProductOptionDetailId">
                                        {{detail.StoreProductOptioinDetailName}} <br>
                                    </span>
                                </span>
                            </button>
                        </div>
                    </div>
                    <div id="firstPrice">
                        ${{p.UnitPrice * p.Quantity}}元
                    </div>
                </div>

                <div class="previewOrderDiv">
                    <button class="btn btn-dark previewOrderBtn" v-on:click="checkOut">
                        <span class="previewOrderSpan">前往結帳 • $ {{sum}}</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
